---
layout: base-layout.njk
title: Home
pagination:
    data: collections.project
    size: 10
    reverse: true
    alias: projects
---
{% for project in projects %}
    <article>
        <h1>
            <a href="{{ project.url | url }}">{{ project.data.title }}</a>
        </h1>
        <time datetime="{{ project.date | dateIso }}">{{ project.date | dateReadable }}</time>
        
        {% excerpt project %}

        <a href="{{ project.url | url }}" aria-label="Read more on {{ project.data.title }}">Read more</a>
    </article>

{% endfor %}